<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perhitungan Kubus"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/etSisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan sisi kubus"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btnHitungVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Volume"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnHitungLuas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Luas Permukaan"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil akan tampil di sini"
        android:textSize="18sp"
        android:paddingTop="24dp"
        android:gravity="center"/>
</LinearLayout>